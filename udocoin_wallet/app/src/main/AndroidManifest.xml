<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udocoin.udocoin_wallet">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Chaquopy">
        <activity
            android:name="com.udocoin.udocoin_wallet.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.udocoin.udocoin_wallet.CodeScannerActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.udocoin.udocoin_wallet.TransactionActivity"
            android:exported="true">
        </activity>
    </application>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"/>
</manifest>